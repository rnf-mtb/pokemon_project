    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FragmentList">

    <fragment
        android:id="@+id/FragmentList"
        android:name="com.fra.pokemonproject.ui.fragment.PokemonListFragment"
        android:label="@string/list_fragment_label"
        tools:layout="@layout/pokemon_list">

    </fragment>
    <fragment
        android:id="@+id/FragmentDetail"
        android:name="com.fra.pokemonproject.ui.fragment.PokemonDetailFragment"
        android:label="@string/detail_fragment_label"
        tools:layout="@layout/pokemon_detail">

        <action
            android:id="@+id/action_detail_to_list"
            app:destination="@id/FragmentList" />
    </fragment>
</navigation>